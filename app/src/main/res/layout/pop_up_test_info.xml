<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:background="@color/whiteTextColor"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:layoutDirection="rtl">

    <ImageButton
        android:id="@+id/exit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:background="@drawable/xit" />

    <TextView
        android:id="@+id/chooseResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="בחר תוצאת טסט"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/linearPassed"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/passed"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/final_test_pass" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearFailed"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/failed"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/final_test_fail" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#eeeeee"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/uploadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:text="העלה קובץ טעויות"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/testResulImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/image" />

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/orange_circular_button"
        android:text="שמור"
        android:textColor="@color/whiteTextColor"
        android:textStyle="bold" />

</LinearLayout>